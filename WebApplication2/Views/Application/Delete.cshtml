@model WebApplication2.Models.Brand

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<div class="content ps-0 " style="height:100vh;flex:1;">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div id="Search" class="row d-flex justify-content-around " style="box-sizing: border-box; border:5px solid#F5F5F5">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        <div class="col-2 d-flex flex-column">
            @Html.Label("Hãng")
            @Html.EditorFor(model => model.brandname, new { htmlAttributes = new { @class = "form-control plaintext", @readonly = "readonly" } })
        </div>
        <div class="col-2 d-flex flex-column">
            @Html.Label("Tên chương trình")
            @Html.EditorFor(model => model.program, new { htmlAttributes = new { @class = "form-control plaintext", @readonly = "readonly" } })
        </div>
        <div class="col-2 d-flex flex-column">
            @Html.Label("Đơn vị tiền tệ")
            @Html.EditorFor(model => model.currency, new { htmlAttributes = new { @class = "form-control plaintext", @readonly = "readonly" } })
        </div>
        <div class="col-2 d-flex flex-column">
            @Html.Label("Ghi chú")
            @Html.EditorFor(model => model.note, new { htmlAttributes = new { @class = "form-control plaintext", @readonly = "readonly" } })
        </div>
        <div class="col-2 d-flex flex-column">
            @Html.Label("Ngày bắt đầu")
            @Html.TextBoxFor(model => model.timestart, "{0:yyyy-MM-dd}", new { @class = "form-control plaintext", type = "date", @readonly = "readonly" })
        </div>
        <div class="col-2 d-flex flex-column">
            @Html.Label("Ngày kết thúc")
            @Html.TextBoxFor(model => model.timeend, "{0:yyyy-MM-dd}", new { @class = "form-control plaintext", type = "date", @readonly = "readonly" })
        </div>

        <table id="tableh" class="cell-border  table table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Loại sản phẩm</th>
                    <th>Điều kiện</th>
                    <th>Rebate(%)</th>
                    <th>Note</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Products.Count; i++)
                {
                    
                    <tr>
                        @Html.HiddenFor(model => model.Products[i].brand_id, new { htmlAtributes = new { style = "display:none;" } })
                        @Html.HiddenFor(model => model.Products[i].product_id)
                        <td>
                            @Html.EditorFor(model => model.Products[i].productname, new { htmlAtributes = new { @class = "form-control" } })
                        </td>
                        <td>
                            @Html.EditorFor(model => model.Products[i].condition, new { htmlAtributes = new { @class = "form-control" } })
                        </td>
                        <td>
                            @Html.EditorFor(model => model.Products[i].rebate, new { htmlAtributes = new { @class = "form-control" } })
                        </td>
                        <td>
                            @Html.EditorFor(model => model.Products[i].note, new { htmlAtributes = new { @class = "form-control" } })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="col-12 from-group ">
            <a href='@Url.Action("Index")' style="width:77px" class="btn btn-secondary">&nbsp;Back&nbsp</a>
            <input type="submit" style="width:77px" value="Delete" class="btn btn-danger">
        </div>
    </div>

    }
</div>
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
<script src="https://kit.fontawesome.com/60bf89e922.js" crossorigin="anonymous"></script>
